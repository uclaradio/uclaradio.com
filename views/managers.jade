  body

    .container(role='main')
      a(href='/')
        img#logo(src='img/logo.png', alt='UCLA RADIO')

      - each manager in managers
        .div(class="col-sm-12 col-md-6 col-lg-4")
          .manager
            .top
              h1 #{manager.position} // 
                span(id="name") #{manager.name}
            .main
              .pic
                img(src="/img/#{manager.photo}")
              .info
                .meetings
                  h1 MEETINGS: 
                  ul
                    li #{manager.meetingTime} (#{manager.meetingPlace})
                .contact
                  h1 CONTACT: 
                  ul
                    li
                      a(href="#{manager.email}") email me!
                .show
                  h1 SHOW: 
                  ul
                    li #{manager.showName} (#{manager.showTime})


